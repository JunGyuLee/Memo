@model KJMemo.Models.DTO.Account.PasswordSettingViewModel

@{
    Layout = "_Layout_Blank";
}


<div class="row">
    <div class="col-md-4">

    </div>
    <div class="col-md-4">


        <div class="card">
            <form class="card-body" method="post">

                <h2 class="text-center">KJMemo 비밀번호 재설정</h2>

                <div class="form-group">
                    <label for="">Password</label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="">PasswordConfirm</label>
                    <input type="password" asp-for="PasswordConfirm" class="form-control" />
                    <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                </div>

                <input asp-for="Email" type="hidden" />

                <button class="btn btn-primary btn-block mb-2">확인</button>

            </form>
        </div>

    </div>

    <div class="col-md-4"></div>
</div>


@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
}